// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model todo {
  id          Int       @id @default(autoincrement())
  text        String    @db.VarChar
  completedAt DateTime? @db.Timestamp()
}
model otro {
  id          Int       @id @default(autoincrement())
  text        String    @db.VarChar
}
model UserModel {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts OptionsModel[]
}

model OptionsModel {
  id        Int     @id @default(autoincrement())
  title     String
  active    Boolean     @default(false)
  user      UserModel   @relation(fields: [userId], references: [id])
  userId  Int
}

model Movies {
  id        Int     @id @default(autoincrement())
  name      String
  genre     String?
}





model Customer {
  id        Int     @id @default(autoincrement())
  code String  @unique
  name      String
  address      String?
  phone      String?
  vehicles Vehicle[]
  transactions Transaction[]
}

model Employee {
  id        Int     @id @default(autoincrement())
  code String  @unique
  name      String
  address      String?
  phone      String?
  transactions Transaction[]
}

model Vehicle {
  id        Int     @id @default(autoincrement())
  code String  @unique
  detail      String?
  transactions Transaction[]
  customer      Customer   @relation(fields: [customerId], references: [id])
  customerId  Int
}

model Fuel {
  id        Int     @id @default(autoincrement())
  description      String
  price     Decimal
  transactions Transaction[]
}


model Pump {
  id        Int     @id @default(autoincrement())
  description      String
  transactions Transaction[]
}

model Transaction {
  id        Int     @id @default(autoincrement())
  date      DateTime
  detail    String
  vehicle      Vehicle   @relation(fields: [vehicleId], references: [id])
  vehicleId  Int
  customer      Customer   @relation(fields: [customerId], references: [id])
  customerId  Int
  employee      Employee   @relation(fields: [employeeId], references: [id])
  employeeId  Int
  pump      Pump   @relation(fields: [pumpId], references: [id])
  pumpId  Int
  fuel      Fuel   @relation(fields: [fuelId], references: [id])
  fuelId  Int
}
